#include <iostream>
using namespace std;

int main() {
    const int SIZE = 5;
    int arr[SIZE];

    // Get input values from user
    cout << "Enter " << SIZE << " integer values: ";
    for (int i = 0; i < SIZE; i++) {
        cin >> *(arr + i);
    }

    // Display the elements of the array using pointers
    cout << "The values you entered are: ";
    for (int i = 0; i < SIZE; i++) {
        cout << *(arr + i) << " ";
    }

    return 0;
}
